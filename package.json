{
  "name": "blobkit",
  "version": "1.0.1",
  "description": "A complete SDK for using Ethereum blob space (EIP-4844) as an ephemeral, verifiable data layer",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.js"
    },
    "./kzg": {
      "types": "./dist/kzg/index.d.ts",
      "require": "./dist/kzg/index.js",
      "import": "./dist/kzg/index.js"
    },
    "./blob": {
      "types": "./dist/blob/index.d.ts",
      "require": "./dist/blob/index.js",
      "import": "./dist/blob/index.js"
    },
    "./codecs": {
      "types": "./dist/codecs/index.d.ts",
      "require": "./dist/codecs/index.js",
      "import": "./dist/codecs/index.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "benchmark": "node test/benchmarks/run.js",
    "build:browser": "webpack --mode=production",
    "prepublishOnly": "npm run clean && npm run build && npm run test"
  },
  "keywords": [
    "ethereum",
    "blob",
    "eip-4844",
    "kzg",
    "ephemeral",
    "verifiable",
    "sdk",
    "web3",
    "typescript",
    "blockchain"
  ],
  "author": "BlobKit Team",
  "license": "Apache-2.0",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/ETHCF"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@noble/curves": "^1.3.0",
    "@noble/hashes": "^1.3.3",
    "brotli": "^1.3.3",
    "ethers": "^6.15.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.32.0",
    "@types/brotli": "^1.3.4",
    "@types/jest": "30.0.0",
    "@types/node": "24.1.0",
    "@typescript-eslint/eslint-plugin": "8.38.0",
    "@typescript-eslint/parser": "8.38.0",
    "buffer": "^6.0.3",
    "crypto-browserify": "^3.12.1",
    "dotenv": "^17.2.1",
    "eslint": "9.32.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "^5.1.0",
    "globals": "^16.3.0",
    "jest": "30.0.5",
    "prettier": "^3.1.1",
    "stream-browserify": "^3.0.0",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.2",
    "typescript": "^5.3.3",
    "webpack": "5.101.0",
    "webpack-cli": "^6.0.1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ETHCF/blobkit.git"
  },
  "bugs": {
    "url": "https://github.com/ETHCF/blobkit/issues"
  },
  "homepage": "https://github.com/ETHCF/blobkit#readme"
}
