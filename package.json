{
  "name": "blobkit",
  "version": "0.1.1",
  "description": "A complete SDK for using Ethereum blob space (EIP-4844) as an ephemeral, verifiable data layer",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.js"
    },
    "./kzg": {
      "types": "./dist/kzg/index.d.ts",
      "require": "./dist/kzg/index.js",
      "import": "./dist/kzg/index.js"
    },
    "./blob": {
      "types": "./dist/blob/index.d.ts",
      "require": "./dist/blob/index.js",
      "import": "./dist/blob/index.js"
    },
    "./codecs": {
      "types": "./dist/codecs/index.d.ts",
      "require": "./dist/codecs/index.js",
      "import": "./dist/codecs/index.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "ethereum",
    "blob",
    "eip-4844",
    "kzg",
    "ephemeral",
    "verifiable",
    "sdk"
  ],
  "author": "BlobKit Team",
  "license": "Apache-2.0",
  "dependencies": {
    "@noble/curves": "^1.3.0",
    "@noble/hashes": "^1.3.3",
    "brotli": "^1.3.3",
    "ethers": "^6.9.0"
  },
  "devDependencies": {
    "@types/brotli": "^1.3.4",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "dotenv": "^17.2.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ETHCF/blobkit.git"
  },
  "bugs": {
    "url": "https://github.com/ETHCF/blobkit/issues"
  },
  "homepage": "https://github.com/ETHCF/blobkit#readme"
}
