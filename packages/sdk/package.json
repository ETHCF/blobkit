{
  "name": "@blobkit/sdk",
  "version": "1.0.0",
  "description": "TypeScript SDK for blob storage with EIP-4844 support and browser compatibility",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./browser": {
      "import": "./dist/browser.js",
      "require": "./dist/browser.cjs",
      "types": "./dist/browser.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc --emitDeclarationOnly && node ./build.js",
    "dev": "rollup -c -w",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "docs": "typedoc",
    "docs:serve": "npx http-server docs -p 8080 -o"
  },
  "keywords": [
    "ethereum",
    "blob",
    "eip-4844",
    "web3",
    "storage",
    "typescript"
  ],
  "author": {
    "name": "Zak Cole",
    "email": "zcole@linux.com",
    "url": "https://x.com/0xzak"
  },
  "license": "MIT",
  "dependencies": {
    "ethers": "^6.7.1",
    "kzg-wasm": "^0.4.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.5",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.2.0",
    "eslint": "^9.32.0",
    "jest": "^30.0.5",
    "rollup": "^4.9.1",
    "rollup-plugin-dts": "^6.1.0",
    "ts-jest": "^29.4.1",
    "typedoc": "^0.28.9",
    "typedoc-plugin-markdown": "^4.8.0",
    "typescript": "^5.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/blobkit/blobkit.git",
    "directory": "packages/sdk"
  },
  "bugs": {
    "url": "https://github.com/blobkit/blobkit/issues"
  },
  "homepage": "https://github.com/blobkit/blobkit/tree/main/packages/sdk#readme"
}
