{
  "name": "@blobkit/proxy-server",
  "version": "0.0.1",
  "description": "Express.js proxy server for blob transaction execution with payment verification",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "blobkit-proxy": "dist/cli.js"
  },
  "files": [
    "dist",
    "openapi.yaml",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "docker:build": "docker build -t blobkit-proxy .",
    "docker:run": "docker run -p 3000:3000 blobkit-proxy"
  },
  "keywords": [
    "ethereum",
    "blob",
    "proxy",
    "eip-4844",
    "server",
    "express"
  ],
  "author": {
    "name": "Zak Cole",
    "email": "zcole@linux.com",
    "url": "https://x.com/0xzak"
  },
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "winston": "^3.11.0",
    "ethers": "^6.7.1",
    "dotenv": "^16.3.1",
    "swagger-ui-express": "^5.0.0",
    "yamljs": "^0.3.0",
    "commander": "^11.1.0",
    "@blobkit/sdk": "file:../sdk"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.16",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/yamljs": "^0.2.34",
    "@types/node": "^20.9.0",
    "typescript": "^5.3.3",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "eslint": "^8.54.0",
    "nodemon": "^3.0.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/blobkit/blobkit.git",
    "directory": "packages/proxy-server"
  },
  "bugs": {
    "url": "https://github.com/blobkit/blobkit/issues"
  },
  "homepage": "https://github.com/blobkit/blobkit/tree/main/packages/proxy-server#readme"
